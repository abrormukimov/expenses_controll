
<div class="group">
  <div class="card">
    <div class="card-body">

			<%= form_for(@expenses) do |f| %>
      
        <div class="form-group">
          <%= f.label :name %>
					<%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
        </div>
        
        <div class="form-group">
          <%= f.label :amount %>
					<%= f.number_field :amount, class: "form-control"  %>
        </div>

        <%= f.collection_check_boxes(:group_ids, @groups, :id, :name, include_hidden: false) do |b| %>
            <%= b.check_box %>
            <%= b.label %>
        <% end %>

        <div class="form-group">
          <%= f.submit "Save Expense", class: "btn btn-success" %>
        </div>

      <% end %>
      <div class="auth-links">
					<%= link_to 'Back', expenses_path %>        
      </div>
    </div>
  </div>
</div>	
